<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/iv_background" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop" android:adjustViewBounds="true"/>
    <ImageView android:id="@+id/iv_shadow" android:background="@drawable/shadow" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
    <ScrollView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/sv_left_menu" android:paddingLeft="30dp" android:scrollbars="none" android:layout_width="150dp" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/layout_left_menu" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </ScrollView>
    <ScrollView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/sv_right_menu" android:paddingRight="30dp" android:scrollbars="none" android:layout_width="150dp" android:layout_height="wrap_content">
        <LinearLayout android:gravity="right" android:orientation="vertical" android:id="@+id/layout_right_menu" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </ScrollView>
</FrameLayout>
